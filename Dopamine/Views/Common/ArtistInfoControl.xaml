<UserControl
    x:Class="Dopamine.Views.Common.ArtistInfoControl"
    x:Name="ThisControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dc="clr-namespace:Digimezzo.Foundation.WPF.Controls;assembly=Digimezzo.Foundation.WPF"
    xmlns:pv="clr-namespace:Dopamine.ViewModels"
    xmlns:prismMvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <Storyboard x:Key="FadeIn">
            <Storyboard>
                <DoubleAnimation
                    Storyboard.TargetProperty="Opacity"
                    BeginTime="0:0:0"
                    From="0.5"
                    To="1"
                    Duration="0:0:0.15" />
            </Storyboard>
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <Storyboard>
                <DoubleAnimation
                    Storyboard.TargetProperty="Opacity"
                    BeginTime="0:0:0"
                    From="1"
                    To="0.5"
                    Duration="0:0:0.15" />
            </Storyboard>
        </Storyboard>
        <DataTemplate DataType="{x:Type pv:ArtistInfoViewModel}">
            <DataTemplate.Resources>
                <BitmapImage x:Key="DefaultImage" UriSource="/Resources/Media/no_album_image.png" />
            </DataTemplate.Resources>
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Center">
                    <Grid>
                        <Image
                            Margin="20"
                            MaxHeight="300"
                            MaxWidth="300"
                            Visibility="{Binding HasImage, Converter={StaticResource BooleanToCollapsedConverter}}"
                            RenderOptions.BitmapScalingMode="HighQuality">
                            <Image.Source>
                                <Binding
                                    Converter="{StaticResource KeyToPathConverter}"
                                    ConverterParameter="{StaticResource DefaultImage}"
                                    Path="ArtistImage" />
                            </Image.Source>
                            <Image.Effect>
                                <DropShadowEffect
                                    ShadowDepth="0"
                                    BlurRadius="20"
                                    Color="{DynamicResource Color_Black}"
                                    Opacity="{DynamicResource Opacity_CoverArtShadow}" />
                            </Image.Effect>
                        </Image>
                        <Border
                            Margin="20"
                            Width="200"
                            Height="200"
                            Background="{DynamicResource Brush_CoverTileBackground}"
                            Visibility="{Binding HasImage, Converter={StaticResource InvertingBooleanToCollapsedConverter}}">
                            <Border.Effect>
                                <DropShadowEffect
                                    ShadowDepth="0"
                                    BlurRadius="20"
                                    Color="{DynamicResource Color_Black}"
                                    Opacity="{DynamicResource Opacity_CoverArtShadow}" />
                            </Border.Effect>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="&#xE13D;"
                                FontSize="100"
                                Style="{StaticResource SegoeAssets}"
                                Foreground="{DynamicResource Brush_CoverTileIcon}" />
                        </Border>
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0"
                        Text="{Binding ArtistName}"
                        FontSize="22"
                        FontWeight="Light"
                        Foreground="{DynamicResource Brush_PrimaryText}" />
                </StackPanel>
                <ScrollViewer
                    VerticalScrollBarVisibility="Auto"
                    Padding="20,15,10,0"
                    PanningMode="Both">
                    <StackPanel Margin="10,0,0,0">
                        <Label
                            Margin="0,0,0,20"
                            Style="{StaticResource TitleLabel}"
                            Content="{DynamicResource Language_Biography}" />
                        <Grid>
                            <StackPanel>
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Light"
                                    TextWrapping="Wrap"
                                    Foreground="{DynamicResource Brush_PrimaryText}"
                                    Text="{Binding Path=Biography}"
                                    Visibility="{Binding HasBiography, Converter={StaticResource BooleanToCollapsedConverter}}" />
                                <Button
                                    Margin="0,10,0,0"
                                    Style="{StaticResource LinkButton}"
                                    Foreground="{DynamicResource Brush_PrimaryText}"
                                    Content="{Binding UrlText}"
                                    Command="{Binding OpenLinkCommand}"
                                    CommandParameter="{Binding Path=Url}" />
                            </StackPanel>
                            <TextBlock
                                Foreground="{DynamicResource Brush_PrimaryText}"
                                Text="{DynamicResource Language_Not_Available}"
                                Visibility="{Binding HasBiography, Converter={StaticResource InvertingBooleanToCollapsedConverter}}" />
                        </Grid>
                        <!--
                        <Label
                            Margin="0,20,0,20"
                            Style="{StaticResource TitleLabel}"
                            Content="{DynamicResource Language_Similar}" />
                        <Grid>
                            <ListBox
                                Style="{StaticResource ListBoxSimilarArtists}"
                                ItemsSource="{Binding SimilarArtists}"
                                Visibility="{Binding HasSimilarArtists, Converter={StaticResource BooleanToCollapsedConverter}}" />
                            <TextBlock
                                Foreground="{DynamicResource Brush_PrimaryText}"
                                Text="{DynamicResource Language_Not_Available}"
                                Visibility="{Binding HasSimilarArtists, Converter={StaticResource InvertingBooleanToCollapsedConverter}}" />
                        </Grid>
                        -->
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <dc:SlidingContentControl
            Panel.ZIndex="0"
            Width="{Binding ActualWidth, ElementName=ThisControl}"
            Height="{Binding ActualHeight, ElementName=ThisControl}"
            EasingAmplitude="0"
            SlideDirection="{Binding SlideDirection}"
            Content="{Binding ArtistInfoViewModel}">
            <dc:SlidingContentControl.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeOut}" />
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FadeIn}" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </dc:SlidingContentControl.Style>
        </dc:SlidingContentControl>
        <dc:ProgressRing
            Panel.ZIndex="1"
            Width="60"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource Brush_Accent}"
            IsActive="{Binding IsBusy}"
            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToCollapsedConverter}}" />
    </Grid>
</UserControl>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Dopamine.Core.Base;assembly=Dopamine.Core"
    xmlns:converters="clr-namespace:Dopamine.Converters"
    xmlns:dc="clr-namespace:Digimezzo.Foundation.WPF.Controls;assembly=Digimezzo.Foundation.WPF"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    xmlns:pc="clr-namespace:Dopamine.Controls"
    xmlns:utils="clr-namespace:Dopamine.Utils"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/DopamineJ;component/Resources/Styles/FontStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:AddEllipsisConverter x:Key="AddEllipsisConverter" />

    <!--  ContextMenu  -->
    <ContextMenu x:Key="ListBoxPlaylistsContextMenu" x:Shared="False">
    	<MenuItem
            Command="{Binding DataContext.ShufflePlaylistsCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            Header="{DynamicResource Language_Shuffle}"
            InputGestureText="">
            <MenuItem.Icon>
                <TextBlock
                    FontSize="15"
                    Style="{StaticResource SegoeAssets}"
                    Text="&#xE8B1;" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem
            Command="{Binding DataContext.PlayPlaylistsCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            Header="{DynamicResource Language_Play}"
            InputGestureText="">
            <MenuItem.Icon>
                <TextBlock
                    FontSize="15"
                    Style="{StaticResource SegoeAssets}"
                    Text="&#xE768;" />
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem
            Command="{Binding DataContext.EnqueuePlaylistsCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            Header="{DynamicResource Language_Enqueue}"
            InputGestureText="">
            <MenuItem.Icon>
                <TextBlock
                    FontSize="15"
                    Style="{StaticResource SegoeAssets}"
                    Text="&#xE710;" />
            </MenuItem.Icon>
        </MenuItem>

        <Separator />
        <MenuItem
            Header="{DynamicResource Language_View_In_Explorer}"
            InputGestureText="{DynamicResource Language_Ctrl_E}"
            Command="{Binding ViewPlaylistInExplorerCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
        <Separator />
        <MenuItem
            Header="{DynamicResource Language_Edit}"
            InputGestureText="{DynamicResource Language_Key_F2}"
            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.EditSelectedPlaylistCommand}" />
        <MenuItem
            Header="{DynamicResource Language_Delete}"
            InputGestureText="{DynamicResource Language_Key_Del}"
            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeleteSelectedPlaylistCommand}" />
    </ContextMenu>

    <!--  ListBoxItem  -->
    <Style x:Key="ListBoxPlaylistsItem" TargetType="{x:Type ListBoxItem}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Margin" Value="0,0,0,2" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Foreground" Value="{DynamicResource Brush_PrimaryText}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <DockPanel Background="{TemplateBinding Background}" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}">
                        <Grid>
                            <Border
                                x:Name="MouseHoverHelper"
                                Height="32"
                                Background="{DynamicResource Brush_ItemHovered}"
                                Opacity="0" />
                            <Border
                                x:Name="DragBorder"
                                Panel.ZIndex="0"
                                Background="{DynamicResource Brush_ItemHovered}"
                                Height="32"
                                Opacity="0" />
                            <Border
                                Panel.ZIndex="1"
                                Height="32"
                                Margin="10,0,10,0">
                                <DockPanel>
                                    <Button
                                        x:Name="DeletePlaylistButton"
                                        Visibility="Collapsed"
                                        DockPanel.Dock="Right"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource TransparentButton}"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.DeletePlaylistCommand}"
                                        CommandParameter="{Binding}"
                                        ToolTip="{DynamicResource Language_Delete_This_Playlist}">
                                        <TextBlock
                                            DockPanel.Dock="Right"
                                            Margin="0,0,7,0"
                                            Text="&#xE894;"
                                            Style="{StaticResource SegoeAssets}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12" />
                                    </Button>
                                    <DockPanel>
                                        <Grid>
                                            <TextBlock
                                                DockPanel.Dock="Left"
                                                Margin="0,0,10,0"
                                                Text="&#xEA37;"
                                                Style="{StaticResource SegoeAssets}"
                                                Foreground="{DynamicResource Brush_Accent}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Visibility="{Binding IsSmartPlaylist, Converter={StaticResource InvertingBooleanToVisibilityConverter}}" />
                                            <TextBlock
                                                DockPanel.Dock="Left"
                                                Margin="0,0,10,0"
                                                Text="&#xE1CA;"
                                                Style="{StaticResource SegoeAssets}"
                                                Foreground="{DynamicResource Brush_Accent}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Visibility="{Binding IsSmartPlaylist, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </Grid>
                                        <TextBlock
                                            Text="{Binding Name}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Stretch"
                                            TextTrimming="CharacterEllipsis"
                                            FontSize="13"
                                            Margin="2,0,2,0"
                                            ToolTip="{Binding Name}" />
                                    </DockPanel>
                                </DockPanel>
                            </Border>
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="Button.DragEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DragBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                Duration="0:0:0.01"
                                                From="0"
                                                To="1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Button.DragLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DragBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                Duration="0:0:0.01"
                                                From="1"
                                                To="0" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>
                        </Grid>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DeletePlaylistButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Brush_ItemSelected}" />
                        </Trigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard Storyboard.TargetName="MouseHoverHelper" TargetProperty="Opacity">
                                    <DoubleAnimation To="1" Duration="{x:Static base:Constants.MouseEnterDuration}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard Storyboard.TargetName="MouseHoverHelper" TargetProperty="Opacity">
                                    <DoubleAnimation To="0" Duration="{x:Static base:Constants.MouseLeaveDuration}" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ListBox  -->
    <Style x:Key="ListBoxPlaylists" TargetType="{x:Type ListBox}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="ContextMenu" Value="{StaticResource ListBoxPlaylistsContextMenu}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ItemContainerStyle" Value="{DynamicResource ListBoxPlaylistsItem}" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
    </Style>
</ResourceDictionary>
